<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            tools:background="#FFA578">

            <ImageView
                android:layout_width="197dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                tools:src="@drawable/ic_first_recharge_en" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="94dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_live_room_first_recharge_time_bg" />

                    <TextView
                        android:id="@+id/tv_first_charge_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="00:00:00" />
                </FrameLayout>
            </FrameLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="133dp"
                    android:layout_height="94dp"
                    android:background="@drawable/ic_live_room_first_recharge_gift1_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="96dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_live_room_first_recharge_gold_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp" />

                        <TextView
                            android:id="@+id/tv_gift_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            tools:text="0" />
                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="6dp"
                    android:layout_height="1dp" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>